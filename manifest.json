{
  "manifest_version": 3,
  "name": "YouTube Vid Sorter",
  "version": "1.0",
  "description": "Adds a custom sorting button to YouTube channel videos tab.",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}